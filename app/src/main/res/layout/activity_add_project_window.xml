<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroudColor"
        tools:context=".AddActivities.AddProjectWindow">

  <ScrollView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:layout_constraintBottom_toTopOf="@+id/linearLayoutOfButtons"
          app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="parent">

      <TextView
              android:text="Nazwa Projektu"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textProjectName"
              android:textSize="16sp"
              android:textColor="@color/white"
              android:layout_marginTop="20dp"/>

      <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/radius"
              android:layout_marginTop="12dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:text="np. Enermitel"
                android:id="@+id/editTextProjectName"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/truenolight"
                android:alpha="0.65"/>
      </FrameLayout>

      <TextView
              android:text="Firma"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textFirm"
              android:textSize="16sp"
              android:textColor="@color/white"
              android:layout_marginTop="20dp"/>
      <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/radius"
              android:layout_marginTop="12dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:text="np. IBS Budownictwo"
                android:id="@+id/editTextFirm"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/truenolight"
                android:alpha="0.65"/>
      </FrameLayout>
      <TextView
              android:text="Opis Projektu"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textDescription"
              android:textSize="16sp"
              android:textColor="@color/white"
              android:layout_marginTop="20dp"/>
      <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/radius"
              android:layout_marginTop="12dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="np. Przegląd 5-letni budynku urzędu gminy o powierzchni ok. 2500m2"
                android:id="@+id/editTextDescription"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/truenolight"
                android:alpha="0.65"/>
      </FrameLayout>
      <TextView
              android:text="Czy jest jedna osoba kontaktowa?"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textIsSingleContactPerson"
              android:textSize="16sp"
              android:textColor="@color/white"
              android:layout_marginTop="20dp"/>
      <LinearLayout
              android:orientation="horizontal"
              android:layout_marginTop="8dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <TextView
                android:text="Wiele Osób"
                android:textColor="@color/white"
                android:fontFamily="@font/truenolight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/textViewMultiplyPerson"
                android:layout_weight="1"/>
        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchIsSinglePerson"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
        <TextView
                android:text="Jedna osoba"
                android:textColor="@color/white"
                android:fontFamily="@font/truenolight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSinglPerson"
                android:layout_weight="1"/>
      </LinearLayout>
      <TextView
              android:text="Osoba Kontaktowa"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textContactPersonSerch"
              android:textSize="16sp"
              android:textColor="@color/white"
              android:layout_marginTop="16dp"/>
      <SearchView
              android:layout_width="match_parent"
              android:id="@+id/serchBarContactPerson"
              android:layout_height="match_parent"
              android:layout_marginTop="16dp"
              android:textColor="@color/white"
              android:fontFamily="@font/truenolight"
              android:background="@drawable/radius"/>

      <androidx.recyclerview.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:id="@+id/listOfContactPerson"
              tools:listitem="@layout/activity_listview_contact_person_search"/>
    </LinearLayout>
  </ScrollView>
  <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="parent"
          android:id="@+id/linearLayoutOfButtons">
    <Button
            android:text="Dodaj osobę kontaktową"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonNormalColor"
            android:id="@+id/buttonAddContactPerson"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"/>
    <Button
            android:text="Dodaj Projekt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonNormalColor"
            android:id="@+id/buttonAddProject"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_weight="1"/>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>