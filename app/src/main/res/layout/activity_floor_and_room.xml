<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.FloorAndRoomActivity"
        android:background="@color/backgroudColor">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewFloorAndRoom"
            tools:layout_editor_absoluteY="334dp"
            tools:layout_editor_absoluteX="-28dp"/>
    <Button
            android:text="Dodaj PiÄ™tro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAddFloor"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonNormalColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonAddRoom"
    />
    <Button
            android:text="Dodaj Pomieszczenie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAddRoom"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonNormalColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonAddFloor"/>

</androidx.constraintlayout.widget.ConstraintLayout>