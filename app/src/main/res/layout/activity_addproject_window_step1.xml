<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudColor"
    tools:context=".AddProjectWindow.AddProjectWindowStep1">


  <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="16dp">
    <TextView
            android:text="Nazwa Projektu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNazwaProjektu"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius"
            android:layout_marginTop="12dp">

      <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textLongMessage"
              tools:ignore="MissingConstraints"
              android:text="np. Enermitel"
              android:id="@+id/editTextNazwaProjektu"
              android:textSize="16sp"
              android:textColor="@color/white"
              android:fontFamily="@font/truenolight"
              android:alpha="0.65"/>
    </FrameLayout>

    <TextView
            android:text="W ilu miastach będzie realizowany projekt?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDodajProjektPytanie1"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal">
      <TextView
              android:text="Jednym"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textDodajProjektPytanie1Opcja1"
              android:textColor="@color/white"
              android:layout_marginRight="12dp"/>
      <Switch
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/switchDodajProjektPytanie1"
              tools:ignore="UseSwitchCompatOrMaterialXml"/>
      <TextView
              android:text="Wielu"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textDodajProjektPytanie1Opcja2"
              android:textColor="@color/white"
              android:layout_marginLeft="12dp"/>
    </LinearLayout>
    <TextView
            android:text="Ile będzie osób kontaktowych?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDodajProjektPytanie2"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal">
      <TextView
              android:text="Jedna"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textDodajProjektPytanie2Opcja1"
              android:textColor="@color/white"
              android:layout_marginRight="12dp"/>
      <Switch
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/switchDodajProjektPytanie2"
              tools:ignore="UseSwitchCompatOrMaterialXml"/>
      <TextView
              android:text="Wiele"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textDodajProjektPytanie2Opcja2"
              android:textColor="@color/white"
              android:layout_marginLeft="12dp"/>
    </LinearLayout>


  </LinearLayout>
  <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent">
    <Button
            android:text="Dalej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonNormalColor"
            android:id="@+id/buttonEndStep1"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>
  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>