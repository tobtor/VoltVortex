<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudColor"
    tools:context=".AddActivities.AddProjectWindow">


  <ScrollView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:layout_constraintBottom_toTopOf="@+id/linearLayout"
          app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

      <TextView
              android:text="Nazwa Projektu"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textProjectName"
              android:textSize="16sp"
              android:textColor="@color/white"
              tools:ignore="MissingConstraints"
              android:layout_marginTop="20dp"/>
      <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/radius"
              android:layout_marginTop="12dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                tools:ignore="MissingConstraints"
                android:text="np. Enermitel"
                android:id="@+id/editTextProjectName"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/truenolight"
                android:alpha="0.65"/>
      </FrameLayout>

      <TextView
              android:text="Firma"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textFirm"
              android:textSize="16sp"
              android:textColor="@color/white"
              tools:ignore="MissingConstraints"
              android:layout_marginTop="20dp"/>
      <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/radius"
              android:layout_marginTop="12dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                tools:ignore="MissingConstraints"
                android:text="np. IBS Budownictwo"
                android:id="@+id/editTextFirm"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/truenolight"
                android:alpha="0.65"/>
      </FrameLayout>
      <TextView
              android:text="Opis Projektu"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textDescription"
              android:textSize="16sp"
              android:textColor="@color/white"
              tools:ignore="MissingConstraints"
              android:layout_marginTop="20dp"/>
      <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/radius"
              android:layout_marginTop="12dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="np. Przegląd 5-letni budynku urzędu gminy o powierzchni ok. 2500m2"
                android:id="@+id/editTextDescription"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/truenolight"
                android:alpha="0.65"/>
      </FrameLayout>
      <TextView
              android:text="Ile będzie osób kontaktowych?"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textQuestionIsSingleContactPerson"
              android:layout_marginTop="24dp"
              android:textSize="16sp"
              android:textColor="@color/white"
              tools:ignore="MissingConstraints"/>
      <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:gravity="center_horizontal"
              android:id="@+id/linearLayoutProjectContactPerson">
        <TextView
                android:text="Jedna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSingleContactPerson"
                android:textColor="@color/white"
                android:layout_marginRight="12dp"/>
        <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchIsSingleContactPerson"/>
        <TextView
                android:text="Wiele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textMultiplyContactPerson"
                android:textColor="@color/white"
                android:layout_marginLeft="12dp"/>
      </LinearLayout>


    </LinearLayout>
  </ScrollView>
  <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="parent"
          android:id="@+id/linearLayout">
    <Button
            android:text="Dalej"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonNormalColor"
            android:id="@+id/buttonEndAddingProject"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>